# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/attendance_bot
DB_CONNECTION_TIMEOUT=30000
DB_QUERY_TIMEOUT=30000
DB_MAX_CONNECTIONS=10
DB_SSL_ENABLED=false
DB_SECURITY_ENABLED=true

# Bot Configuration
BOT_NAME=AttendanceBot
DEFAULT_TIMEZONE=Asia/Kolkata

# WhatsApp Session Data
SESSION_PATH=./whatsapp-session

# Environment Settings
NODE_ENV=development
PORT=3000

# Attendance Settings
REMINDER_MINUTES_BEFORE=10
CONFIRMATION_MINUTES_AFTER=10
ABSENCE_TIMEOUT_HOURS=2
LOW_ATTENDANCE_THRESHOLD=75

# Security Configuration
ENCRYPTION_KEY=your-32-character-encryption-key-here
ENCRYPTION_ALGORITHM=aes-256-gcm
BCRYPT_SALT_ROUNDS=12

# Rate Limiting
RATE_LIMITING_ENABLED=true
RATE_WINDOW_MS=60000
MAX_COMMANDS_PER_MINUTE=10
MAX_MESSAGES_PER_MINUTE=20
MAX_REGISTRATIONS_PER_HOUR=5
MAX_SUBJECTS_PER_HOUR=20

# Input Validation
INPUT_VALIDATION_ENABLED=true
MAX_NAME_LENGTH=50
MAX_SUBJECT_LENGTH=100
MAX_MESSAGE_LENGTH=1000
MAX_TIMEZONE_LENGTH=50
MAX_COMMAND_LENGTH=500

# Session Management
SESSION_MANAGEMENT_ENABLED=true
SESSION_TIMEOUT_MS=86400000
SESSION_ROTATION_MS=14400000
MAX_SESSIONS_PER_USER=3

# User Security
USER_SECURITY_ENABLED=true
MAX_FAILED_ATTEMPTS=5
BLOCK_DURATION_MS=1800000
BLOCK_ESCALATION=2.0
MAX_BLOCK_DURATION_MS=86400000
PERMANENT_BLOCK_THRESHOLD=10

# Logging Configuration
LOG_LEVEL=info
LOG_DIR=logs
MAX_LOG_SIZE=20m
MAX_LOG_FILES=14d
AUDIT_LOGGING_ENABLED=true
AUDIT_RETENTION_DAYS=90

# Performance Monitoring
MONITORING_ENABLED=true
METRICS_INTERVAL_MS=60000
HEALTH_CHECK_INTERVAL_MS=300000
CPU_ALERT_THRESHOLD=80
MEMORY_ALERT_THRESHOLD=512
ERROR_RATE_THRESHOLD=0.05
RESPONSE_TIME_THRESHOLD=5000

# Content Security
CONTENT_SECURITY_ENABLED=true
MAX_FILE_SIZE_MB=10
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,pdf,doc,docx,txt
VIRUS_SCAN_ENABLED=false
QUARANTINE_DIR=./quarantine

# Network Security
NETWORK_SECURITY_ENABLED=true
ALLOWED_ORIGINS=*
TRUSTED_PROXIES=
MAX_REQUEST_SIZE=10mb
ENABLE_CORS=false
CORS_CREDENTIALS=false

# Security Headers
SECURITY_HEADERS_ENABLED=true
HSTS_MAX_AGE=31536000

# API Security
API_SECURITY_ENABLED=true
API_KEY_HEADER=X-API-Key
API_KEY_LENGTH=32
JWT_ENABLED=false
JWT_SECRET=your-jwt-secret-key-here
JWT_EXPIRATION=24h
REFRESH_TOKENS_ENABLED=false

# Error Handling
ERROR_HANDLING_ENABLED=true
MAX_ERRORS_PER_MINUTE=100
CIRCUIT_BREAKER_THRESHOLD=10

# Backup Configuration
BACKUP_ENABLED=false
BACKUP_INTERVAL_MS=86400000
BACKUP_RETENTION_DAYS=30
BACKUP_COMPRESSION_LEVEL=6